# ===========================================
# Docker Compose Environment Variables
# Copy this file to .env and update values
# ===========================================

# Environment
NODE_ENV=production

# -------------------------------------------
# Database (must match docker-compose.yml)
# -------------------------------------------
POSTGRES_USER=chikox
POSTGRES_PASSWORD=chikox1122
POSTGRES_DB=chikox_db
DATABASE_URL=postgresql://chikox:chikox1122@db:5432/chikox_db?schema=public

# -------------------------------------------
# Server Configuration
# -------------------------------------------
PORT=3000
HOST=0.0.0.0

# JWT Secrets (CHANGE THESE IN PRODUCTION!)
JWT_ACCESS_SECRET=your-super-secret-access-key-change-this
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this

# Token Expiration
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Cookie Secret (CHANGE IN PRODUCTION!)
COOKIE_SECRET=your-cookie-secret-change-this

# CORS
CORS_ORIGIN=https://chikox.net,https://admin.chikox.net

# -------------------------------------------
# Email (Resend)
# Get API key from https://resend.com
# -------------------------------------------
RESEND_API_KEY=re_your_api_key_here
FROM_EMAIL=info@chikox.net
CLIENT_URL=https://chikox.net

# -------------------------------------------
# Client & Admin (empty for proxy routing)
# -------------------------------------------
NEXT_PUBLIC_API_URL=
VITE_API_URL=
